<!DOCTYPE html>
<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>@ViewData["Title"] - پنل مدیریت</title>
    <link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/lib/sidebar/style.css" rel="stylesheet"/>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link asp-append-version="true" href="~/css/site.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/Shop.styles.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
<div class="align-items-stretch d-flex wrapper">
    <nav class="bg-dark" id="sidebar">
        <div class="custom-menu">
            <button class="btn-sidebar btn-sidebar-primary" id="sidebarCollapse" type="button">
                <i class="fa fa-bars"></i>
                <span class="sr-only">Toggle Menu</span>
            </button>
        </div>
        <div class="p-4">
            <div class="d-flex flex-column gap-2 text-center">
                <a asp-page="/Index" class="text-white" style="font-size: 1.1rem">
                    پنل مدیریت
                </a>
                <span class="text-white user-select-none">@User.Identity!.Name</span>

            </div>
            <hr class="bg-white"/>
            <ul class="components list-unstyled mb-5 sidebar-items">
                <li>
                    <a asp-page="/Index"><span class="fa fa-tachometer mr-3 text-white"></span> داشبورد</a>
                </li>
                <li>
                    <a asp-page="/ContactUs/Index"><span class="fa fa-commenting mr-3 text-white"></span> پیام‌ها</a>
                </li>
                <li>
                    <a asp-page="/Members/Index"><i class="bi bi-people-fill mr-3 text-white"></i> اعضا</a>
                </li>
                <li>
                    <a asp-page="/Categories/Index"><i class="bi bi-bookmarks-fill mr-3 text-white"></i> دسته‌بندی‌ها</a>
                </li>
                <li>
                    <a asp-page="/Products/Index"><i class="bi bi-box-fill mr-3 text-white"></i> محصولات</a>
                </li>
                <li>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index"><span class="fa fa-user mr-3 text-white"></span> پروفایل</a>
                </li>
                <li>
                    <a asp-area="" asp-page="/Index"><span class="fa fa-home mr-3 text-white"></span> صفحه اصلی سایت</a>
                </li>
                <li>
                    <a asp-area="Identity" asp-page="/Account/Logout"><span class="fa fa-sign-out mr-3 text-white"></span> خروج</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Page Content  -->
    <div class="p-4 p-md-5 pt-3 pt-md-4" id="content">
        @RenderBody()
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/popper/popper.min.js"></script>
<script asp-append-version="true" src="~/lib/sidebar/main.js"></script>
<script asp-append-version="true" src="~/js/site.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>