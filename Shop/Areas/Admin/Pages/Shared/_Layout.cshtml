<!DOCTYPE html>
<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>@ViewData["Title"] - پنل مدیریت</title>
    <link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/css/site.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/Shop.styles.css" rel="stylesheet"/>
    <!-- Font Awesome Icons -->
    <link href="~/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- Theme style -->
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- template rtl version -->
    <link href="~/dist/css/custom-style.css" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
<div class="text-right wrapper" style="max-width: unset;">
    <nav class="bg-white border-bottom main-header navbar navbar-expand navbar-light">
        <!-- Left navbar links -->
        <ul class="flex-grow-1 navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#">
                    <i class="fa fa-bars"></i>
                </a>
            </li>
            <li class="d-none d-sm-inline-block nav-item">
                <a asp-area="" asp-page="/Index" class="nav-link">خانه</a>
            </li>
        </ul>
        <partial name="_LoginPartial"/>
    </nav>

    <!-- Main Sidebar Container -->
    <aside class="elevation-4 main-sidebar sidebar-dark-primary">
        <!-- Brand Logo -->
        <a asp-area="Admin" asp-page="/Index" class="brand-link text-center">
            <span class="brand-text font-weight-light">پنل مدیریت</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="flex-column nav nav-pills nav-sidebar" data-accordion="false" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a asp-area="Admin" asp-page="/Index" class="nav-link">
                                <i aria-hidden="true" class="fa fa-tachometer"></i>
                                <p>
                                    داشبورد
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-page="/ContactUs/Index" class="nav-link">
                                <i aria-hidden="true" class="fa fa-commenting-o"></i>
                                <p>
                                    پیام‌ها
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
        </div>
        <!-- /.sidebar -->
    </aside>


    <div class="content-wrapper">
        <div class="content-header"></div>
        <div class="container-fluid content">
            @RenderBody()
        </div>
    </div>


    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
            <h5>Title</h5>
            <p>Sidebar content</p>
        </div>
    </aside>
    <!-- /.control-sidebar -->
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/popper/popper.min.js"></script>
<script src="~/dist/js/adminlte.min.js"></script>

<script asp-append-version="true" src="~/js/site.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>