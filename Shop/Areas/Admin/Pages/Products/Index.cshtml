@page
@model Shop.Areas.Admin.Pages.Products.IndexModel

@{
    ViewData["Title"] = "محصولات";
}

<div class="card" style="max-width: 1300px;">
    <div class="card-header text-center" style="font-size: 1.1rem">@ViewData["Title"]</div>
    <div class="card-body">
        <p>
            <a asp-page="Create">ایجاد دسته جدید</a>
        </p>
        <table class="table table-mobile-responsive">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Categories)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].StockQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].IsFeatured)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="max-width: 250px;">
                        @Html.DisplayFor(modelItem => item.Categories)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsFeatured)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">جزئیات</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="text-danger">حذف</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        @if (Model.ValidPage) {
            <paging class="mt-3"
                    page-no="@Model.PageIndex"
                    page-size="@Model.PageLimit"
                    page-size-dropdown-items="5-10-15"
                    query-string-key-page-no="p"
                    query-string-key-page-size="limit"
                    show-page-size-nav="false"
                    show-total-pages="false"
                    show-total-records="false"
                    total-records="@Model.TotalItems">
            </paging>
        }
        else {
            <div class="mt-3 text-center">
                <p class="text-danger" style="font-size: 1.1rem">چنین صفحه‌ای وجود ندارد.</p>
                <a asp-page="./Index" class="btn btn-primary">صفحه اول</a>
            </div>
        }
    </div>
</div>