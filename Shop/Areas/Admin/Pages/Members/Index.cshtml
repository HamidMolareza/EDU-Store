@page
@model Shop.Areas.Admin.Pages.Members.IndexModel

@{
    ViewData["Title"] = "کاربرها";
}

<div class="card m-auto">
    <div class="card-header p-2 text-center" style="font-size: 1.4rem">
        @ViewData["Title"]
    </div>
    <div class="card-body">
        <table class="table table-mobile-responsive">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].DisplayId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Roles)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td style="max-width: 250px;">
                        @Html.DisplayFor(modelItem => item.Roles)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id">اطلاعات بیشتر</a>
                        @if (item.CanDelete) {
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="text-danger">| حذف</a>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
        @if (Model.ValidPage) {
            <paging class="mt-3"
                    page-no="@Model.PageIndex"
                    page-size="@Model.PageLimit"
                    page-size-dropdown-items="5-10-15"
                    query-string-key-page-no="p"
                    query-string-key-page-size="limit"
                    show-page-size-nav="false"
                    show-total-pages="false"
                    show-total-records="false"
                    total-records="@Model.TotalItems">
            </paging>
        }
        else {
            <div class="mt-3 text-center">
                <p class="text-danger" style="font-size: 1.1rem">چنین صفحه‌ای وجود ندارد.</p>
                <a asp-page="./Index" class="btn btn-primary">صفحه اول</a>
            </div>
        }
    </div>
</div>