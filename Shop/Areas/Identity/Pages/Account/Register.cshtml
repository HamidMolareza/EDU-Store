@page
@model RegisterModel
@{
    ViewData["Title"] = "ثبت‌نام";
}

<div class="align-items-center d-flex flex-column mt-4">
    <div class="div_border mx-auto my-0 p-4 rounded-1" style="width: 450px">
        <form asp-route-returnUrl="@Model.ReturnUrl" id="registerForm" method="post">
            <h2 class="text-center">ثبت‌نام</h2>
            <p class="text-center">ساخت یک اکانت جدید</p>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input aria-required="true" asp-for="Input.Email" autocomplete="username" class="form-control" placeholder="name@example.com"/>
                <label asp-for="Input.Email">ایمیل</label>
                <div class="mt-1 text-danger">
                    <span asp-validation-for="Input.Email"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input aria-required="true" asp-for="Input.Password" autocomplete="new-password" class="form-control" placeholder="password"/>
                <label asp-for="Input.Password">رمز عبور</label>
                <div class="mt-1 text-danger">
                    <span asp-validation-for="Input.Password"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                <input aria-required="true" asp-for="Input.ConfirmPassword" autocomplete="new-password" class="form-control" placeholder="password"/>
                <label asp-for="Input.ConfirmPassword">تکرار رمز عبور</label>
                <div class="mt-1 text-danger">
                    <span asp-validation-for="Input.ConfirmPassword"></span>
                </div>
            </div>
            <button class="btn btn-lg btn-primary w-100" id="registerSubmit" type="submit">ثبت‌نام</button>
        </form>
    </div>
    <div class="mt-3">
        آیا قبلا عضو شدین؟ <a asp-page="./Login" class="text-decoration-none">ورود</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}