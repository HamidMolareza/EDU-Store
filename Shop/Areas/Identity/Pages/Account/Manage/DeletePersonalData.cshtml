@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "حذف اطلاعات شخصی";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>حذف این اطلاعات دائمی و غیرقابل بازگشت خواهد بود.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword) {
            <div class="form-floating mb-3">
                <input aria-required="true" asp-for="Input.Password" autocomplete="current-password" class="form-control" placeholder="رمز عبور"/>
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger btn-lg w-100" type="submit">حذف اطلاعات و اکانت</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}